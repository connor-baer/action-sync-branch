{
  "name": "action-sync-branch",
  "version": "1.0.1",
  "description": "GitHub Action to keep a branch in sync with the current branch",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc && ncc build --source-map --license licenses.txt",
    "lint": "biome check --diagnostic-level=error && eslint . --quiet --concurrency=auto",
    "lint:fix": "biome check --write --diagnostic-level=error && eslint . --fix --quiet --concurrency=auto",
    "lint:ci": "biome ci --diagnostic-level=error && eslint . --quiet --concurrency=auto"
  },
  "engines": {
    "node": "24.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/connor-baer/action-sync-branch.git"
  },
  "keywords": [
    "github",
    "actions"
  ],
  "author": "Connor BÃ¤r <github@connorbaer.co",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/github": "^6.0.1"
  },
  "devDependencies": {
    "@sumup-oss/foundry": "^9.0.5",
    "@types/node": "^25.0.3",
    "@vercel/ncc": "^0.38.4",
    "js-yaml": "^4.1.1",
    "typescript": "^5.9.3"
  }
}
